<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ui.fragments.locationFragment.LocationDetailDialogFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_size_activity_16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_size_activity_200dp"
                    android:layout_marginHorizontal="@dimen/dimen_size_text_16sp"
                    app:cardBackgroundColor="@color/color_white"
                    app:cardCornerRadius="@dimen/dimen_size_activity_4dp"
                    app:cardElevation="@dimen/dimen_size_activity_4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/banner_platzi_conf_2"
                        android:contentDescription="@string/app_name"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_size_text_16sp"
                    app:cardBackgroundColor="@color/color_white"
                    app:cardCornerRadius="@dimen/dimen_size_activity_4dp"
                    app:cardElevation="@dimen/dimen_size_activity_4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingVertical="@dimen/dimen_size_activity_16dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_detail_conference_speaker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_size_activity_8dp"
                            android:textSize="@dimen/dimen_size_text_24sp"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"
                            android:textStyle="bold"
                            style="@style/TextAppearance.AppCompat.Title"
                            tools:text="Nombre del Expositor"/>
                        <TextView
                            android:id="@+id/tv_detail_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_size_activity_8dp"
                            android:textSize="@dimen/dimen_size_text_14sp"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            tools:text="Titulo de la conferencia"
                            android:drawablePadding="@dimen/dimen_size_activity_16dp"
                            app:drawableStartCompat="@drawable/ic_location"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="@dimen/dimen_size_activity_8dp"
                            android:background="@color/colorPrimaryDark"/>
                        <TextView
                            android:id="@+id/tv_detail_number_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_size_activity_8dp"
                            android:textSize="@dimen/dimen_size_text_14sp"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            tools:text="Number phone"
                            android:drawablePadding="@dimen/dimen_size_activity_16dp"
                            app:drawableStartCompat="@drawable/ic_phone"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="@dimen/dimen_size_activity_8dp"
                            android:background="@color/colorPrimaryDark"/>
                        <TextView
                            android:id="@+id/tv_detail_link"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_size_activity_8dp"
                            android:textSize="@dimen/dimen_size_text_14sp"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            tools:text="Sitio web del lugar "
                            android:drawablePadding="@dimen/dimen_size_activity_16dp"
                            app:drawableStartCompat="@drawable/ic_link"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="@dimen/dimen_size_activity_8dp"
                            android:background="@color/colorPrimaryDark"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>