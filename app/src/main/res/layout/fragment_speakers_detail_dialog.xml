<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".view.ui.fragments.speakersFragment.SpeakersDetailDialogFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Toolbar
            android:id="@+id/toolbar_speakers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_size_activity_64dp"
        app:cardCornerRadius="@dimen/dimen_size_activity_8dp"
        app:cardBackgroundColor="@color/color_white"
        app:cardElevation="@dimen/dimen_size_activity_8dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_speaker_speaker_detail_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_size_activity_200dp"
                    android:contentDescription="@string/app_name"
                    tools:src="@mipmap/ic_launcher"
                    android:layout_marginTop="@dimen/dimen_size_activity_16dp"/>
                <TextView
                    android:id="@+id/tv_name_speaker_detail_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_activity_16dp"
                    android:gravity="center"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textStyle="bold"
                    android:textSize="@dimen/dimen_size_text_24sp"
                    tools:text="Speakers Name"/>
                <TextView
                    android:id="@+id/tv_job_speaker_detail_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_size_activity_4dp"
                    android:gravity="center"
                    style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                    android:textSize="@dimen/dimen_size_text_12sp"
                    tools:text="job title"/>
                <TextView
                    android:id="@+id/tv_company_speaker_detail_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textStyle="bold"
                    android:textSize="@dimen/dimen_size_text_18sp"
                    tools:text="workplace"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_size_activity_40dp"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_launcher"
                    android:layout_margin="@dimen/dimen_size_activity_8dp"/>
                <TextView
                    android:id="@+id/tv_description_speaker_detail_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_size_activity_16dp"
                    android:layout_marginBottom="@dimen/dimen_size_activity_16dp"
                    android:textAlignment="center"
                    style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                    android:textSize="@dimen/dimen_size_text_14sp"
                    tools:text="job title"/>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</FrameLayout>