<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.speakersFragment.SpeakersDetailDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Toolbar
                android:id="@+id/toolbar_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_size_activity_40dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/logo_platzi_conf"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <ImageButton
                        android:layout_width="@dimen/dimen_size_activity_40dp"
                        android:layout_height="@dimen/dimen_size_activity_40dp"
                        android:contentDescription="@string/app_name"
                        android:background="@android:color/transparent"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:paddingEnd="@dimen/dimen_size_activity_8dp"
                        android:paddingStart="@dimen/dimen_size_activity_0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <View
            android:id="@+id/ll_speakers_bar_linear_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_activity_48dp"
            android:background="@color/colorPrimary"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_activity_200dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="@dimen/dimen_size_activity_40dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_activity_16dp"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Title"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_size_text_24sp"
            tools:text="Speakers Name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_size_activity_4dp"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
            android:textSize="@dimen/dimen_size_text_12sp"
            tools:text="job title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Title"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_size_text_18sp"
            tools:text="workplace"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_activity_40dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="@dimen/dimen_size_activity_16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_size_activity_16dp"
            style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
            android:textSize="@dimen/dimen_size_text_12sp"
            tools:text="job title"/>
    </LinearLayout>
</FrameLayout>